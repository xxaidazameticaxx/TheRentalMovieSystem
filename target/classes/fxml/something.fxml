<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controllers.MoviesUserController">
    <children>
        <TableView fx:id="movieTable_id" layoutX="10.0" layoutY="70.0" prefHeight="420.0" prefWidth="780.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="180.0" text="Name"/>
                <TableColumn fx:id="genreColumn" prefWidth="100.0" text="Genre"/>
                <TableColumn fx:id="ratingsColumn" prefWidth="80.0" text="Ratings"/>
                <TableColumn fx:id="releaseYearColumn" prefWidth="100.0" text="Release Year"/>
                <TableColumn fx:id="languageColumn" prefWidth="100.0" text="Language"/>
                <TableColumn fx:id="durationColumn" prefWidth="80.0" text="Duration"/>
                <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Price"/>
            </columns>
        </TableView>
        <TextField fx:id="searchButtonTextField1_id" layoutX="390.0" layoutY="30.0" prefWidth="240.0" promptText="Search movies..."/>
        <ImageView fx:id="searchButton1_id" layoutX="640.0" layoutY="25.0" onMouseClicked="#searchButtonClick" pickOnBounds="true" preserveRatio="true">
            <!-- Add your search icon image here -->
        </ImageView>
        <ChoiceBox fx:id="movieGenreChoiceBox_id" layoutX="520.0" layoutY="30.0" prefWidth="150.0"/>
        <TextField fx:id="name_id" layoutX="130.0" layoutY="510.0" prefWidth="220.0" promptText="Movie Name" />
        <TextField fx:id="genre_id" layoutX="130.0" layoutY="540.0" prefWidth="220.0" promptText="Genre" />
        <TextField fx:id="ratings_id" layoutX="130.0" layoutY="570.0" prefWidth="220.0" promptText="Ratings" />
        <TextField fx:id="release_year_id" layoutX="400.0" layoutY="510.0" prefWidth="130.0" promptText="Release Year" />
        <TextField fx:id="language_id" layoutX="400.0" layoutY="540.0" prefWidth="130.0" promptText="Language" />
        <TextField fx:id="duration_id" layoutX="400.0" layoutY="570.0" prefWidth="130.0" promptText="Duration" />
        <TextField fx:id="price_id" layoutX="570.0" layoutY="510.0" prefWidth="130.0" promptText="Price" />
        <Button fx:id="rentButton_id" layoutX="620.0" layoutY="540.0" onAction="#rentClick" text="Rent" />
        <Button fx:id="helpButton_id" layoutX="620.0" layoutY="570.0" onAction="#helpClick" text="Help" />
        <ImageView fx:id="backButtonMovies_id" layoutX="10.0" layoutY="10.0" onMouseClicked="#backClick" pickOnBounds="true" preserveRatio="true">
            <!-- Add your back button icon image here -->
        </ImageView>
        <Label layoutX="130.0" layoutY="480.0" prefWidth="220.0" text="Movie Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label layoutX="10.0" layoutY="510.0" prefWidth="100.0" text="Name:" />
        <Label layoutX="10.0" layoutY="540.0" prefWidth="100.0" text="Genre:" />
        <Label layoutX="10.0" layoutY="570.0" prefWidth="100.0" text="Ratings:" />
        <Label layoutX="300.0" layoutY="510.0" prefWidth="100.0" text="Release Year:" />
        <Label layoutX="300.0" layoutY="540.0" prefWidth="100.0" text="Language:" />
        <Label layoutX="300.0" layoutY="570.0" prefWidth="100.0" text="Duration:" />
        <Label layoutX="470.0" layoutY="510.0" prefWidth="100.0" text="Price:" />
    </children>
</AnchorPane>
